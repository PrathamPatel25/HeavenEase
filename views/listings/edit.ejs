<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <h3 class="text-center mb-4">Edit Your Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-4">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control shadow-sm"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a title.</div>
        </div>

        <div class="mb-4">
          <label for="description" class="form-label fw-semibold"
            >Description</label
          >
          <textarea
            name="listing[description]"
            class="form-control shadow-sm"
            rows="4"
            required
          >
<%= listing.description %></textarea
          >
          <div class="invalid-feedback">Please enter a description.</div>
        </div>

        <div class="mb-4 text-center">
          <p class="fw-semibold">Original Listing Image</p>
          <img
            class="img-fluid rounded shadow-sm"
            src="<%= originalImageUrl %>"
            alt="Original Image"
            style="max-height: 250px"
          />
        </div>

        <div class="mb-4">
          <label for="image" class="form-label fw-semibold"
            >Upload New Image</label
          >
          <input
            name="listing[image]"
            type="file"
            class="form-control shadow-sm"
          />
        </div>

        <div class="mb-4">
          <label for="category" class="form-label fw-semibold">Category</label>
          <select
            class="form-select shadow-sm"
            id="category"
            name="listing[category]"
            required
          >
            <option selected disabled value="">Select a category</option>
            <% const categories = [ "Rooms", "Iconic cities", "Mountains",
            "Castles", "Amazing pools", "Camping", "Farms", "Arctic", "Domes",
            "Boats", "Lakefront", "Mansions", "Earth homes", "A-frames",
            "Ski-in", "Desert", "Beach" ]; categories.forEach(category => { %>
            <% if(listing.category === category) { %>
            <option value="<%= category %>" selected><%= category %></option>
            <% } else { %>
            <option value="<%= category %>"><%= category %></option>
            <% } %> <% }) %>
          </select>
          <div class="invalid-feedback">Please select a valid category.</div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4">
            <label for="price" class="form-label fw-semibold">Price</label>
            <input
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control shadow-sm"
              required
            />
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <div class="col-md-6 mb-4">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control shadow-sm"
              required
            />
            <div class="invalid-feedback">
              Please provide a valid country name.
            </div>
          </div>
        </div>

        <div class="mb-4">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control shadow-sm"
            required
          />
          <div class="invalid-feedback">Please provide a valid location.</div>
        </div>

        <div class="text-center">
          <button class="btn btn-primary btn-md shadow-sm" type="submit">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
