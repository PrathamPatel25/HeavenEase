<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <h3 class="text-center mb-4">Create a New Listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-4">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input
            name="listing[title]"
            placeholder="Add a catchy title"
            type="text"
            class="form-control shadow-sm"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a title.</div>
        </div>

        <div class="mb-4">
          <label for="description" class="form-label fw-semibold"
            >Description</label
          >
          <textarea
            name="listing[description]"
            class="form-control shadow-sm"
            rows="4"
            placeholder="Provide a brief description"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a description.</div>
        </div>

        <div class="mb-4">
          <label for="image" class="form-label fw-semibold"
            >Upload Listing Image</label
          >
          <input
            type="file"
            class="form-control shadow-sm"
            name="listing[image]"
            required
          />
        </div>

        <div class="mb-4">
          <label for="category" class="form-label fw-semibold">Category</label>
          <select
            class="form-select shadow-sm"
            id="category"
            name="listing[category]"
            required
          >
            <option selected disabled value="">Select a category</option>
            <%const categories = [ "Rooms", "Lakefront", "Mansions", "Farms" ,
            "A-frames", "Ski-in", "Desert", "Beach", "Iconic cities",
            "Mountains", "Castles", "Amazing pools", "Camping", "Earth homes",
            "Arctic", "Domes", "Boats" ]; %> <% categories.forEach(category => {
            %>
            <option value="<%= category %>"><%= category %></option>
            <% }); %>
          </select>
          <div class="invalid-feedback">Please select a valid category.</div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4">
            <label for="price" class="form-label fw-semibold">Price</label>
            <input
              name="listing[price]"
              placeholder="e.g., 12000"
              type="number"
              class="form-control shadow-sm"
              required
            />
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <div class="col-md-6 mb-4">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input
              name="listing[country]"
              placeholder="e.g., India"
              type="text"
              class="form-control shadow-sm"
              required
            />
            <div class="invalid-feedback">
              Please enter a valid country name.
            </div>
          </div>
        </div>

        <div class="mb-4">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input
            name="listing[location]"
            placeholder="e.g., Jaipur, Rajasthan"
            type="text"
            class="form-control shadow-sm"
            required
          />
          <div class="invalid-feedback">Please provide a valid location.</div>
        </div>

        <div class="text-center">
          <button class="btn btn-primary btn-md shadow-sm" type="submit">
            Add Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
